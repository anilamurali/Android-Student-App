<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TextView android:text="@string/user_name"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <EditText android:id="@+id/uname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView android:text="@string/password"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:text="LOGIN"
        android:layout_margin="5dp"
        android:id="@+id/loginbtn"
        android:background="@drawable/buttonstyle"
        android:textColor="#E6F0F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton android:text="GO TO REGISTER"
        android:layout_margin="5dp"
        android:id="@+id/registerbtn"
        android:textColor="#D7E3E4"
        android:background="@drawable/buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>